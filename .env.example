# Botija Forex Environment Variables

# ═══════════════════════════════════════════════════════════════
# OANDA API
# ═══════════════════════════════════════════════════════════════
OANDA_API_KEY=
OANDA_ACCOUNT_ID=
OANDA_ENVIRONMENT=demo  # demo or live
OANDA_GRANULARITY=H4    # M1, M5, M15, M30, H1, H4, D

# ═══════════════════════════════════════════════════════════════
# OPENAI
# ═══════════════════════════════════════════════════════════════
OPENAI_API_KEY=

# ═══════════════════════════════════════════════════════════════
# TELEGRAM (Optional)
# ═══════════════════════════════════════════════════════════════
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# ═══════════════════════════════════════════════════════════════
# TRADING CONFIGURATION
# ═══════════════════════════════════════════════════════════════
TRADING_MODE=DEMO               # DEMO or LIVE
DEFAULT_INSTRUMENT=EUR_USD      # EUR_USD, GBP_USD, USD_JPY, etc.

# Account settings
ACCOUNT_LEVERAGE=50             # Account leverage (e.g., 50 for 50:1)

# Position sizing
# TRADE_AMOUNT_PERCENT = % of balance to use as MARGIN per trade
# Notional = margin × leverage
# Example: 10% of $100k = $10k margin → $10k × 50 = $500k notional
TRADE_AMOUNT_PERCENT=10         # % of balance as margin per trade
MIN_BALANCE_PERCENT=20          # % to keep as reserve

# Risk management (pips)
STOP_LOSS_PIPS=50
TAKE_PROFIT_PIPS=100
TRAILING_STOP_PIPS=30

# ═══════════════════════════════════════════════════════════════
# SCHEDULER
# ═══════════════════════════════════════════════════════════════
TRADING_INTERVAL_HOURS=4        # Execute every N hours

# ═══════════════════════════════════════════════════════════════
# TECHNICAL INDICATORS
# ═══════════════════════════════════════════════════════════════
EMA_FAST_PERIOD=20
EMA_SLOW_PERIOD=50
RSI_PERIOD=14

# ═══════════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════════
DATABASE_URL=sqlite:///./botija-forex.db

# ═══════════════════════════════════════════════════════════════
# SERVER
# ═══════════════════════════════════════════════════════════════
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=false
